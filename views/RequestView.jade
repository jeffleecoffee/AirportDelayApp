extends layout
block content
  div.container#bodyContainer
    div.row.text-center
      h1 Where Are You Heading?
    div.row#requestRow
      div.col-md-4.col-md-offset-2.text-center
        form.form-horizontal#formRequest(name="submit",method="get",action="/ResultView")
          fieldset
            legend My Journey
            p
              label.control-label(for='start') Start:
              input#start(type='text', name='start')
            div#midpointGroup
            p
              label.control-label(for='destination') Destination
              input#destination(type='text', name='destination') 
            p#buttonRow
              button#addAirport(type='button', class="btn btn-warning", onclick='addMidpoint()') Add Airport
              button#btnSubmit(type="submit",class="btn btn-primary") Request
      div.col-md-4.text-center
        legend My Previous Journeys
        ul#historyList
          each user in userList
            if(user.history)
              each airport in user.history
                li=airport
            else 
              li 
                h4 Start a new journey and we will keep track of it! 
    div.row.text-center
      span#user-info
      br
      span#user-stat 
      br
  script.
    var countMidpoint = 1;
    function addMidpoint(){
      var inputName = "Midpoint"+countMidpoint;
      document.getElementById("midpointGroup").innerHTML+='<p><label for="'+inputName+'" class="control-label">'+inputName+':</label><input type="text" id="'+inputName+'" name="'+inputName+'" /></p>';
      countMidpoint++;
    }

  
