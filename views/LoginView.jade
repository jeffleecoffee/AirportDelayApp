extends layout
block content
  div.container#loginContainer
    div.row.text-center#loginRow 
       h1 You Could be 
       h1 Up 
       h1 in the Clouds
    div.row.text-center
      div.col-md-4.col-md-offset-4
        div
          a(id='login', class='btn btn-primary btn-lg', href='/auth/facebook') Facebook Login 
            i.fa.fa-facebook-square.fa-lg
          br
          a(id='logout', class='btn btn-primary btn-lg', href='/auth/logout') Logout
          br
          a(id='request', class='btn btn-primary btn-lg', href='/LoadUserHistory') Start My Journey 
            i.fa.fa-plane.fa-lg
        div#userInfo
          br
          span#user-info
          span#user-stat
  script(src='http://code.jquery.com/jquery-2.1.4.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js') 
  script.
    var user = !{JSON.stringify(user === undefined ? null : user)};

    if (user == null) {
      $('#logout').css('display', 'none');
      $('#logoutBtn').css('display', 'none');
      $('#request').css('display', 'none'); 
      $('#requestBtn').css('display', 'none');       
      $('#user-info').css('display', 'none');  
      $('#user-stat').css('display', 'none'); 
    } 
    else {
      $('#login').css('display', 'none');
      $('#loginBtn').css('display', 'none');  
      $('#user-info').text("UID: " + user.uid);  
      $('#user-stat').text("FB status: connected");       
    }
